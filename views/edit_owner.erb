
<h2>Please edit all details below</h2>

<form action="/owners/<%= @owners.id %>" method="post">
    <input type="hidden" name="_method" value="put">

  <div class="form-group">
    <label for="owner-name">Name:</label>
    <div class="form-item">
      <input type="text" name="name" value="<%= @owners.name %>"/>
    </div>
  </div>

  <div class="form-group">
    <label for="owner-address">Address:</label>
    <div class="form-item">
      <input type="text" name="address" value="<%= @owners.address %>"/>
    </div>
  </div>

  <div class="form-group">
    <label for="owner-phone-number">Contact Number:</label>
    <div class="form-item">
      <input type="text" name="phone_number" value="<%= @owners.phone_number %>"/>
    </div>
  </div>

  <div class="form-group">
      <label for="home-check">Home Check Completed:</label>
      <div class="form-item">
        <input type="radio" name="home_check" value=TRUE <%= "checked" if @owners.home_check == true %>>Yes</br>
        <input type="radio" name="home_check" value=FALSE <%= "checked" if @owners.home_check != true %>>No</br>
      </div>
    </div>

  <button class="button big-button">UPDATE</button>

</form>
