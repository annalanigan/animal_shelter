<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Contact Number</th>
    <th>Home Check</th>
    <th>Adopted Animal</th>
  </tr>

  <% @animals.each do |animal| %>
    <tr>
      <td><%= owner.name %></td>
      <td><%= owner.address %></td>
      <td><%= owner.phone_number %></td>
      <td>
      <% if owner.home_check == true %>Passed
      <% else %>In Progress
      <% end %>
      </td>
      <td>
        <% @animals.each do |animal| %>
          <% if animal.owner_id == owner.id %><%= animal.name %>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
